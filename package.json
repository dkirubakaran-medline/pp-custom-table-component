{
  "name": "pcf-project",
  "version": "1.0.0",
  "description": "Project containing your PowerApps Component Framework (PCF) control.",
  "scripts": {
    "build:scss": "sass TableGrid/CustomTable.scss TableGrid/CustomTable.css --style=compressed --no-source-map",
    "watch:scss": "sass TableGrid/CustomTable.scss TableGrid/CustomTable.css --watch --style=compressed --no-source-map",
    "build": "npm run build:scss && pcf-scripts build",
    "clean": "pcf-scripts clean",
    "lint": "pcf-scripts lint",
    "lint:fix": "pcf-scripts lint fix",
    "rebuild": "pcf-scripts rebuild",
    "start": "npm run build:scss && pcf-scripts start",
    "start:watch": "npm run build:scss && pcf-scripts start watch",
    "refreshTypes": "pcf-scripts refreshTypes",
    "pcf-push": "pac pcf push --publisher-prefix gridname"
  },
  "dependencies": {
    "@fluentui/react": "^8.125.3",
    "@fluentui/react-components": "^9.72.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@microsoft/eslint-plugin-power-apps": "^0.2.51",
    "@types/node": "^18.19.86",
    "@types/powerapps-component-framework": "^1.3.16",
    "css-loader": "^7.1.3",
    "eslint-plugin-promise": "^7.1.0",
    "globals": "^15.15.0",
    "pcf-scripts": "^1",
    "pcf-start": "^1",
    "sass": "^1.97.3",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.44.0"
  }
}
